    "compile": "tsex compile",
    "compile:watch": "tsex compile --watch",
    "prepublishOnly": "npm run clean && npm run compile"
  },
  "keywords": [
    "language",
    "detection"
  ],
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.12",
    "@types/sha1": "^1.1.3",
    "lodash": "^4.17.21",
    "sha1": "^1.1.1",
    "toygrad": "^2.2.0",
    "tsex": "^1.1.4",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "line-reader": "^0.4.0",
    "n-readlines": "^1.0.1"
  }
}
